<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Students - Student Management System</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/marks.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">
                <i class="fas fa-graduation-cap"></i>
                <span>StudentHub - Teacher</span>
            </div>
            <ul class="nav-menu">
                <li><a href="/teacher/dashboard">Dashboard</a></li>
                <li><a href="/teacher/manage-students" class="active">Manage Students</a></li>
                <li><a href="/teacher/add-marks">Add Marks</a></li>
                <li><a href="/teacher/mark-attendance">Mark Attendance</a></li>
                <li><a href="/teacher/profile">Profile</a></li>
            </ul>
            <div class="nav-user">
                <a href="/logout" class="logout-btn" title="Logout">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
                <i class="fas fa-bell"></i>
                <img src="https://ui-avatars.com/api/?name=Teacher&size=200&background=4a5568&color=fff" alt="User Avatar" class="user-avatar">
            </div>
        </div>
    </nav>

    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <h1><i class="fas fa-users"></i> Manage Students</h1>
            <p>Add, edit, or remove student records</p>
        </div>
    </section>

    <!-- Filter Section -->
    <section class="filter-section">
        <div class="container">
            <div class="filter-controls">
                <label for="classFilter">Filter by Class:</label>
                <select id="classFilter">
                    <option value="all">All Classes</option>
                    <option value="6a">Class 6A</option>
                    <option value="6b">Class 6B</option>
                    <option value="7a">Class 7A</option>
                    <option value="7b">Class 7B</option>
                </select>
                <button class="btn-export" onclick="addStudent()">
                    <i class="fas fa-plus"></i> Add New Student
                </button>
            </div>
        </div>
    </section>

    <!-- Students Table -->
    <section class="marks-section">
        <div class="container">
            <h2 class="section-title">Student List</h2>
            <div class="table-container">
                <table class="marks-table">
                    <thead>
                        <tr>
                            <th>Student ID</th>
                            <th>Name</th>
                            <th>Class</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>STU2025001</td>
                            <td>John Doe</td>
                            <td>6A</td>
                            <td>john.doe@student.edu</td>
                            <td>+1 234 567 8900</td>
                            <td><span class="status pass">Active</span></td>
                            <td>
                                <button class="btn-receipt" onclick="editStudent('STU2025001')"><i class="fas fa-edit"></i></button>
                                <button class="btn-receipt" onclick="deleteStudent('STU2025001')"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td>STU2025002</td>
                            <td>Jane Smith</td>
                            <td>6A</td>
                            <td>jane.smith@student.edu</td>
                            <td>+1 234 567 8901</td>
                            <td><span class="status pass">Active</span></td>
                            <td>
                                <button class="btn-receipt" onclick="editStudent('STU2025002')"><i class="fas fa-edit"></i></button>
                                <button class="btn-receipt" onclick="deleteStudent('STU2025002')"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 StudentHub. All rights reserved.</p>
        </div>
    </footer>

    <script>
        function addStudent() {
            alert('Add student form will open here');
        }
        function editStudent(id) {
            alert('Edit student: ' + id);
        }
        function deleteStudent(id) {
            if(confirm('Are you sure you want to delete this student?')) {
                alert('Delete student: ' + id);
            }
        }
    </script>
</body>
</html>
